<%= form_for(@product) do |f| %>

  <%= f.label 'code' %>
  <%= f.text_field :code %>

  <%= f.fields_for :gallery do |f_gallery| %>
    <%= f_gallery.file_field 'image' %>
  <% end %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> Este producto no pudo ser guardado:</h2>
        <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <%= f.submit %>

<% end %>
